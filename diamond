#include <iostream>
using namespace std;
int main()
{
    //diamond
    int n=10;
    for(int i=0;i<n;i++)
    {
        //space
        for(int j=0;j<n-i-1;j++)
        {
            cout<<" ";
        }
        //star
        for(int k=0;k<2*i+1;k++)
        {
            cout<<"*";
        }
        cout<<endl;
    }
    for(int i=0;i<n;i++)
    {
        //space
        for(int j=0;j<i;j++)
        {
            cout<<" ";
        }
        //star
        for(int k=1;k<((2*n)- 2*i+1)-1;k++)
        {
            cout<<"*";
        }
        cout<<endl;
    }
    return 0;
}
